<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_scroll"
    android:layout_width="fill_parent"
    android:isScrollContainer="true"
    android:layout_height="fill_parent">
    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dip"
            android:layout_marginLeft="25dip"
            android:gravity="top"
            android:layout_width="fill_parent">
            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_phone"/>

            <LinearLayout
                android:id="@+id/LinearLayout04"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="10dip"
                android:layout_width="fill_parent"
                android:gravity="center_vertical">"
                <TextView
                    android:id="@+id/app_vers_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge" 
                    android:text="@string/app_name"/>
                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_pro"/>
            </LinearLayout>
            

        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout03"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_marginLeft="50dip"
            android:layout_marginTop="15dip"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvContrib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/app_contributors"/>
            <TextView
                android:id="@+id/tvEric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="- Eric Taix"
                android:layout_marginTop="8dip"/>
            <TextView
                android:id="@+id/tvSteve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="8dip"
                android:text="- Steve Garon"/>
            <TextView 
                android:id="@+id/tvTranslators" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginTop="16dip"
                android:textAppearance="?android:attr/textAppearanceLarge" 
                android:text="@string/translator"/>
            <TextView
                android:id="@+id/tvIgnacio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="8dip" android:text="- Ignacio Diez (es)"/>
            <TextView
                android:id="@+id/tvMatthias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="8dip" android:text="- Matthias Kutscheid (de)"/>
            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_width="wrap_content" android:layout_marginTop="8dip" android:id="@+id/TextView01" android:layout_height="wrap_content" android:text="- Gino Jongenelen (nl)"></TextView>
            <TextView
                android:id="@+id/about_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginTop="16dip"
                android:text="@string/app_google_plus"/>   
            <TextView
                android:id="@+id/about_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="16dip"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/LinearLayout05"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            android:layout_marginBottom="25dip">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eula_view"
                android:id="@+id/id_eula_view"
                android:paddingBottom="5dip"
                android:paddingTop="3dip"
                android:paddingRight="30dip"
                android:paddingLeft="30dip"/>
        </LinearLayout>
  </LinearLayout>
</ScrollView>