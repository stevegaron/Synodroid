<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:id="@android:id/background">
    <shape>
      <corners android:radius="2dip" />
      <gradient
        android:startColor="#ff9c9c9c"
        android:centerColor="#ff6b6b6b"
        android:centerY="0.50"
        android:endColor="#ff737373"
        android:angle="270" /> 
    </shape>
  </item>
  <item android:id="@android:id/secondaryProgress">
    <clip>
      <shape>
        <corners android:radius="2dip" />
        <stroke
          android:width="20dip"
          android:color="#ff000000"
          android:dashWidth="10dip"
          android:dashGap="10dip" />
      </shape>
    </clip>
  </item>
  <item android:id="@android:id/progress">
    <clip>
      <shape>
        <corners android:radius="2dip"/>
        <gradient
          android:startColor="#ff0fc80f"
          android:centerColor="#ff1eaF1e"
          android:centerY="0.50"          
          android:endColor="#ff2d8c2d"
          android:angle="270" />
      </shape>
    </clip>
  </item>
</layer-list>