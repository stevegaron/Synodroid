<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android"
>
  <item
    android:id="@android:id/background"
  >
    <shape>
      <corners
        android:radius="6dip" />
      <gradient
        android:startColor="#ff9c9e9c"
        android:centerColor="#ff6b756b"
        android:centerY="0.50"
        android:endColor="#ff737173"
        android:angle="270" />
    </shape>
  </item>
  <item
    android:id="@android:id/secondaryProgress"
  >
    <clip>
      <shape>
        <corners
          android:radius="6dip" />
        <stroke
          android:width="40dip"
          android:color="#ff0000ff"
          android:dashWidth="20dip"
          android:dashGap="10dip" />
      </shape>
    </clip>
  </item>
  <item
    android:id="@android:id/progress"
  >
    <clip>
      <shape>
        <corners
          android:radius="6dip" />
        <gradient
          android:startColor="#ffffd300"
          android:centerColor="#ffffbe00"
          android:centerY="0.50"
          android:endColor="#ffffc700"
          android:angle="270" />
      </shape>
    </clip>
  </item>
</layer-list>